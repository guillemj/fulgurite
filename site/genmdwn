use strict;
use warnings;

use POSIX qw(strftime);
use UUID qw(uuid);

my $date = strftime('%F', localtime);
my $uuid = uuid();

print "Title: \n";
print "Tags: \n";
print "Date: $date\n";
print "Uuid: $uuid\n";

1;
